datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  email        String
  passwordHash String
  createdAt    DateTime  @default(now())
  profile      Profile?
  blocks       Block[]
}

model Profile {
  id           Int     @id @default(autoincrement())
  username     String  @unique
  name         String?
  bio          String?
  avatarUrl    String?
  backgroundUrl String?
  phone        String?
  email        String?
  telegram     String?
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
}

model Block {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  type       String    // "note" | "link" | "photo" | "video" | "music" | "map" | "social"
  sort       Int       @default(0)
  note       String?
  linkUrl    String?
  photoUrl   String?
  videoUrl   String?
  musicEmbed String?
  mapLat     Float?
  mapLng     Float?
  socialType String?   // "telegram" | "vk" | "instagram"
  socialUrl  String?
}
